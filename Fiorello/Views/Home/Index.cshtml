@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}
<main>

    <!-- SLIDER START -->
    <section id="slider">
        <div class="owl-carousel slider">
            @foreach (var item in Model.Sliders)
            {
                <div> <img src="~/img/@item.Image" alt=""> </div>
            }
        </div>
        <div class="container context pl-lg-5 ml-lg-3">
            <div class="row">
                <div class="col-lg-5">
                    <div class="text">
                        @Html.Raw(Model.SliderDetail.Header)
                        <p class="text-black-50 d-none d-sm-block">
                            @Model.SliderDetail.Description
                        </p>
                    </div>
                    <div class="img">
                        <img src="~/img/@Model.SliderDetail.Signature" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- SLIDER END -->
    <!-- ABOUT START -->
    <section id="about">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-lg-6">
                    <div class="img">

                        <img src="~/img/@Model.About.Image" class="img-fluid" alt="">
                        <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-play fa-lg"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-text mt-5 mt-lg-0 px-lg-5">
                        @Html.Raw(Model.About.Title)
                        @Html.Raw(Model.About.Description)
                        @Html.Raw(Model.About.Style)
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ABOUT END -->
    <!-- EXPERTS START -->
    <section id="experts">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                        <h1>@Model.ExpertTitle.Title</h1>
                        <p class="text-black-50">
                            @Model.ExpertTitle.Description
                        </p>
                    </div>
                </div>
            </div>

            <div class="row pb-5">
                @foreach (var expert in Model.Experts)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="item text-center">
                            <div class="img">
                                <img src="~/img/@expert.Image" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="text mt-3">
                                <h6>@expert.Name</h6>
                                <p class="text-black-50">@expert.Position</p>
                            </div>
                        </div>
                    </div>
                }


                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </section>
    <!-- EXPERTS END -->
    <!-- SUBSCRIBE START -->
    <section id="subscribe" style="background-image: url(~/../img/@Model.Subscribe.Image)">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-12">
                    <div class="content text-center py-5">
                        <h3>@Model.SubscribeDetail.Title</h3>
                        <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                            @Html.Raw(Model.SubscribeDetail.Input)
                            @Html.Raw(Model.SubscribeDetail.Button)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- SUBSCRIBE END -->
    <!-- BLOG START -->
    <section id="blog">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                        <h1>@Model.BlogTitle.Title</h1>
                        <p class="text-black-50">
                            @Model.BlogTitle.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="row pb-5">
                @foreach (var blog in Model.Blogs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="item">
                            <div class="img position-relative">
                                <img src="~/img/@blog.Image" class="img-fluid" alt="">
                                <div class="date rounded bg-light position-absolute py-1 px-2">
                                    <span>@blog.PublishDate.ToString("dd.MM.yyyy")</span>
                                </div>
                            </div>
                            <div class="text mt-3 text-center px-5">
                                <h5>@blog.Name</h5>
                                <p class="text-black-50">
                                    @blog.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
    <!-- BLOG END -->
    <!-- SAY START -->
    <section id="say">
        <div class="container">
            <div class="row py-5 justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div class="owl-carousel say">
                        @foreach (var item in Model.Says)
                        {
                            <div>
                                <div class="item text-center">
                                    <div class="img d-flex justify-content-center">
                                        <img src="~/img/@item.Image" alt="">
                                    </div>
                                    <div class="text text-muted pt-3 pb-5">
                                        <i>
                                            @item.Description
                                        </i>
                                    </div>
                                    <div class="author">
                                        <h6>@item.Name</h6>
                                        <p class="text-black-50">@item.Position</p>
                                    </div>
                                </div>
                            </div>
                        }

                        @*<div>
                                <div class="item text-center">
                                    <div class="img d-flex justify-content-center">
                                        <img src="~/img/testimonial-img-2.png" alt="">
                                    </div>
                                    <div class="text text-muted pt-3 pb-5">
                                        <i>
                                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo
                                            ligula eget.
                                        </i>
                                    </div>
                                    <div class="author">
                                        <h6>Jasmine White</h6>
                                        <p class="text-black-50">Florist</p>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- SAY END -->
    <!-- INSTAGRAM START -->
    <section id="instagram">
        <div class="owl-carousel instagram">
            @foreach (var item in Model.Instagrams)
            {
                <div><img src="~/img/@item.Image" class="img-fluid" alt=""></div>
            }
        </div>
        <div class="hastag bg-light text-muted py-2 px-3">
            @Model.FiorelloLabel.Label
        </div>
    </section>
    <!-- INSTAGRAM END -->

</main>
<!-- ABOUT START -->

